#!/bin/sh
workdir=$(cd $(dirname $0); pwd)
mkdir -p ${workdir}/../logs
action=$1
conf=$2
if [[ -z $action ]]
then
 echo "Pleasemake sure the positon variable is start or stop."
 exit
fi

if [ $action = "start" ]
  then
    if [[ -z $conf ]]
    then
        conf=${workdir}/../config/broker-mqtt.toml
    fi
    echo "config:$conf"
    echo "broker mqtt server is starting...."
    nohup ${workdir}/../libs/mqtt-server --conf=$conf >> ${workdir}/../logs/mqtt-server-nohub.log 2>&1 &
    num=` ps -ef | grep mqtt-server | grep -v grep | wc -l`
    if [ $num -gt 1 ]
    then
        echo "broker mqtt server started successfully."
    fi
  elif [ $action = "stop" ]
  then
    no=`ps -ef | grep mqtt-server  | grep conf | grep -v grep | awk '{print $2}'`
    if [[ -n $no ]]
    then
        echo "Currently running process number: $no"
        kill $no
        num=`ps -ef | grep mqtt-server | grep conf | grep -v grep | wc -l`
        if [ $num -eq 0 ]
        then
            echo "broker mqtt server stop successfully."
        fi
    fi
  else
    echo "Pleasemake sure the positon variable is start or stop."
fi
